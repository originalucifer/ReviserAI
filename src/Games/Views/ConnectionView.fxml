<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>


<?import javafx.scene.control.TextArea?>
<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="5" stylesheets="@../Style/Connection.css" styleClass="connectionBox" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Games.Controllers.ConnectionController">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

    <Button text="Connect" onAction="#buttonEventHandler" styleClass="connectBt"/>
    <Button text="Get gamelist" onAction="#buttonEventHandler" styleClass="connectBt"/>
    <Button text="Get playerlist" onAction="#buttonEventHandler" styleClass="connectBt"/>

    <VBox styleClass="box" spacing="5">
        <padding><Insets top="3" right="3" bottom="3" left="3"/></padding>
        <Button text="Login" onAction="#buttonEventHandler"/>
        <Label text="Player name: "/>
        <TextField fx:id="loginTf"/>
    </VBox>

    <VBox styleClass="box" spacing="5">
        <padding><Insets top="3" right="3" bottom="3" left="3"/></padding>
        <Button text="Subscribe" onAction="#buttonEventHandler"/>
        <Label text="Game name: "/>
        <TextField fx:id="subscribeTf"/>
    </VBox>

    <VBox styleClass="box" spacing="5">
        <padding><Insets top="3" right="3" bottom="3" left="3"/></padding>
        <Button text="Challenge" onAction="#buttonEventHandler"/>
        <Label text="&#60;PlayerName&#62; &#60;GameName&#62;: "/>
        <TextField fx:id="challengeTf"/>
    </VBox>

    <VBox styleClass="box" spacing="5">
        <padding><Insets top="3" right="3" bottom="3" left="3"/></padding>
        <Button text="Accept Challenge" onAction="#buttonEventHandler"/>
        <Label text="&#60;Challenge Number&#62;: "/>
        <TextField fx:id="acceptChallengeTf"/>
    </VBox>

    <Button text="Logout" onAction="#buttonEventHandler" styleClass="closeConnectBt"/>
    <Button text="Close connection" onAction="#buttonEventHandler" styleClass="closeConnectBt"/>

    <VBox styleClass="box" spacing="5">
        <padding><Insets top="3" right="3" bottom="3" left="3"/></padding>
        <Label text="Server output: "/>
        <TextArea styleClass="serverOutput" fx:id="serverOutput" editable="false" prefHeight="150"/>
    </VBox>

</VBox>
